                    android:padding="18dp"
                    app:backgroundTint="@color/accent_gray"
                    android:minHeight="64dp"
                    app:cornerRadius="14dp"
                    android:letterSpacing="0.01" />
            </GridLayout>
    </LinearLayout>

    <!-- Recording Card -->
    <LinearLayout
        android:id="@+id/cardRecording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardClasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvRecordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samples: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@color/background_status" />

            <com.google.android.material.button.MaterialButton
