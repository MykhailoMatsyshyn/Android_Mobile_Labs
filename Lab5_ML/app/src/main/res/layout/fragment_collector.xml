                                android:textColor="@color/accent_green_dark" />

                            <TextView
                                android:id="@+id/tvAccel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ax: 0.00\nay: 0.00\naz: 0.00"
                                android:textSize="11sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/accent_green_dark"
                                android:layout_marginTop="6dp"
                                android:lineSpacingExtra="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical"
                        android:background="@color/background_status"
                        android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”„ Gyroscope"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_blue_dark" />

                            <TextView
                                android:id="@+id/tvGyro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gx: 0.00\ngy: 0.00\ngz: 0.00"
                                android:textSize="11sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/primary_blue_dark"
                                android:layout_marginTop="6dp"
                                android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <!-- Selected Class Indicator -->
    <LinearLayout
        android:id="@+id/cardSelectedClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_status"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cardStatus"
